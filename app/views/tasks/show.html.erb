<div class="container">
  <div class="d-flex justify-content-between">
    <h1><%= @task.title %></h1>
    <%= link_to "Edit", edit_task_path%> <i class="fa-solid fa-trashcan"></i>
    <%= link_to "Delete",
        task_path(@task),
        method: :delete,
        data: { confirm: "Do you really want to delete #{@task.title}?" } %>
    <i class="fa-solid fa-pencil"></i>
  </div>

  <p><%= @task.details %></p>

  <%= link_to "Back to list", tasks_path %>
</div>
