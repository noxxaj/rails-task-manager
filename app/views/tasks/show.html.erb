<div class="container">
  <div class="d-flex justify-content-between">
    <h1><%= @task.title %></h1>
    <%= link_to "Edit", edit_task_path, class:"fa-solid fa-pencil" %>
    <%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Do you really want to delete #{@task.title}?" }, class:"fa-solid fa-trash-can" %>
  </div>

  <p><%= @task.details %></p>

  <%= link_to "Back to list", tasks_path %>
</div>
